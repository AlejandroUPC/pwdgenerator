<% layout('layouts/boilerplate')%>

    <body>
        <div id="mainContainer" class="container mt-10">
            <form  enctype="multipart/form-data" id="formFire" method="POST" action="/password">
                <h1 class="mt-10">Automatic Password Generator</h1>
                <input type="text" placeholder="Your password" class="mb-2" id="pwdResult" disabled>
                <label for="rangePwd" class="form-label mb-0 d-inline">Password Length <div class="d-inline-block"
                        id="currentRange">15</div></label>
                <input type="range" class="form-range d-inline" id="rangePwd" min=5 max=25 step=1 name="pwdLen">
                <input type="checkbox" id="alphaChar" name="wAlp" value="1">
                <label for="alphaChar" class="form-label">Alphabetical characters</label><br>
                <input type="checkbox" id="numChar" name="wNum" value="1">
                <label for="numChar" class="form-label">Numerical characters</label><br>
                <input type="checkbox" id="specialChar" name="wSpec" value="1">
                <label for="specialChar" class="form-label">Special characters</label><br>


                <button class="btn btn secondary d-block" id="genPwd" type="submit">Generate</button>
                </form>
        </div>
    </body>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="js/home.js"></script>

    </html>